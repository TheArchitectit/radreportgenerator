<Window x:Class="LiveOptics.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:vm="clr-namespace:LiveOptics.UI.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Live Optics Report Generator" Height="720" Width="1080">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Background="#f3f3f3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D7" Padding="20,15">
            <DockPanel>
                <TextBlock Text="Live Optics Analyzer" FontSize="20" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Load .xlsx" Command="{Binding LoadFileCommand}" Padding="15,5" Margin="5,0"/>
                    <Button Content="Generate Report" Command="{Binding GenerateReportCommand}" Padding="15,5" Margin="5,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Dashboard -->
                <ColumnDefinition Width="1*"/> <!-- Agent Sidebar -->
            </Grid.ColumnDefinitions>

            <!-- Dashboard -->
            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- KPI Cards -->
                    <RowDefinition Height="*"/>    <!-- Graphs -->
                </Grid.RowDefinitions>

                <!-- Status Cards -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20">
                    <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,10,0" MinWidth="150">
                        <StackPanel>
                            <TextBlock Text="Project" Foreground="Gray"/>
                            <TextBlock Text="{Binding ProjectName}" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,10,0" MinWidth="150">
                        <StackPanel>
                            <TextBlock Text="Servers" Foreground="Gray"/>
                            <TextBlock Text="{Binding ServerCount}" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Charts -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="White" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <DockPanel>
                            <TextBlock Text="IOPS Performance" DockPanel.Dock="Top" FontWeight="Bold" Margin="0,0,0,5"/>
                            <lvc:CartesianChart Series="{Binding IOPSSeries}" />
                        </DockPanel>
                    </Border>

                    <Border Grid.Row="1" Background="White" CornerRadius="5" Margin="0,10,0,0" Padding="10">
                        <DockPanel>
                            <TextBlock Text="Throughput (MB/s)" DockPanel.Dock="Top" FontWeight="Bold" Margin="0,0,0,5"/>
                            <lvc:CartesianChart Series="{Binding ThroughputSeries}" />
                        </DockPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- AI Sidebar -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="15">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Text="AI Research Agent" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Run Analysis Agent" Command="{Binding AnalyzeWithAiCommand}" Margin="0,0,0,10"/>
                        <ProgressBar IsIndeterminate="{Binding IsBusy}" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Height="2" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding AiInsights}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F8FF" BorderBrush="#0078D7" BorderThickness="1,0,0,0" Margin="0,5" Padding="10">
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#DDDDDD" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}"/>
        </Border>
    </Grid>
</Window>
